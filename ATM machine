#include <stdio.h>
#include <stdlib.h>

// Function declarations
void checkBalance(float balance);
float depositMoney(float balance);
float withdrawMoney(float balance);

int main() {
    float balance = 1000.0; // initial balance
    int choice;

    printf("===== Welcome to the ATM Machine =====\n");

    while (1) {
        printf("\n********* ATM Menu *********\n");
        printf("1. Check Balance\n");
        printf("2. Deposit Money\n");
        printf("3. Withdraw Money\n");
        printf("4. Exit\n");
        printf("\n");

        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                checkBalance(balance);
                break;
            case 2:
                balance = depositMoney(balance);
                break;
            case 3:
                balance = withdrawMoney(balance);
                break;
            case 4:
                printf("\nThank you for using the ATM. Have a great day! ðŸ’³\n");
                exit(0);
            default:
                printf("\nInvalid choice! Please try again.\n");
        }
    }
    return 0;
}

// Function to check balance
void checkBalance(float balance) {
    printf("\nYour current balance is: â‚¹%.2f\n", balance);
}

// Function to deposit money
float depositMoney(float balance) {
    float deposit;
    printf("\nEnter the amount to deposit: â‚¹");
    scanf("%f", &deposit);

    if (deposit <= 0) {
        printf("Invalid amount. Please try again.\n");
    } else {
        balance += deposit;
        printf("â‚¹%.2f deposited successfully.\n", deposit);
        printf("Updated Balance: â‚¹%.2f\n", balance);
    }
    return balance;
}

// Function to withdraw money
float withdrawMoney(float balance) {
    float withdraw;
    printf("\nEnter the amount to withdraw: â‚¹");
    scanf("%f", &withdraw);

    if (withdraw <= 0) {
        printf("Invalid amount. Please try again.\n");
    } else if (withdraw > balance) {
        printf("Insufficient balance! Transaction failed.\n");
    } else {
        balance -= withdraw;
        printf("Please collect your cash: â‚¹%.2f\n", withdraw);
        printf("Updated Balance: â‚¹%.2f\n", balance);
    }
    return balance;
}
